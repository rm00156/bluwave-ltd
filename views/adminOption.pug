html(land="en")
    include common/adminHead.pug
    include common/adminSideNav.pug
    include common/adminTopNavbar.pug
    include common/adminScripts.pug
    +adminHead()
    link(href='/assets/libs/dropzone/dist/min/dropzone.min.css' rel='stylesheet')
    link(href='/assets/css/croppie.css' rel='stylesheet')
    #overlay
        .section.section-full
            .container
                .row.justify-content-center

                    .col-md-10.col-lg-10
                        
                        .form-styled.bg-white(style="height:340px;margin-top:100px; padding:10px")
                            .warning-message.mt-5
                                p(style="text-align:center") Are you sure you want to update this option?
                                p(style="text-align:center") Doing so will effect the item below.

                            #warning-items
                            .row
                                .col-lg-6.text-center
                                    button.btn.btn-success.btn-block.mt-3#confirmModal Confirm Crop
                                .col-lg-6.text-center
                                    button.btn.btn-primary.btn-block.mt-3.text-center#cancelModal(style="margin-right:5px") Cancel
                                    
                                          

                            //- div#gif(style="display: none;justify-content: center;")
                                img(src="/img/loading2.gif" style="margin:auto")
                            
                            
                            //- div#cropSection
                                div(style="height:300px;width:100%")
                                    #uploadedImageForCrop(style="height:60%;width:100%")
                                  button.btn.btn-outline-primary.btn-block.mt-3(id ="cancelCrop" ) Cancel
    
    div
        if(message)
            #toast.toast.show.toast_alert.align-items-center.text-white.bg-primary.border-0(role='alert' aria-live='assertive' aria-atomic='true')
                .d-flex
                    .toast-body(style="width:100%")
                        h6.text-white(style="text-align:center") #{message}
                    button.btn-close.btn-close-white.me-2.m-auto(type='button' data-bs-dismiss='toast' aria-label='Close')
            input#message(type="hidden" value=message)
        +adminTopNavbar()
        .main-wrapper
            // navbar vertical
            +adminSideNav()
            // main wrapper
            main.main-content-wrapper
                // container
                .container
                    // row
                    .row.mb-8
                        .col-md-12
                            .d-md-flex.justify-content-between.align-items-center
                                // page header
                                div
                                    input#optionId(type="hidden" value=option.id)
                                    h2 Option - #{option.name}
                                    // breacrumb
                                    nav(aria-label='breadcrumb')
                                        ol.breadcrumb.mb-0
                                            li.breadcrumb-item
                                                a.text-inherit(href='/admin-dashboard') Dashboard
                                            li.breadcrumb-item
                                                a.text-inherit(href='/admin-dashboard/option-types') Option Types
                                            li.breadcrumb-item
                                                a.text-inherit(href=`/admin-dashboard/option-type/${optionType.id}`) #{optionType.optionType}
                                            li.breadcrumb-item.active(aria-current='page') #{option.name}
                                // button
                                div
                                    a.btn.btn-light(href=`/admin-dashboard/option-type/${optionType.id}`) Back to #{optionType.name}
                    // row
                    .row
                        .col-lg-12.col-12
                            // card
                            .card.mb-6.card-lg
                                // card body
                                .card-body.p-6
                                    h4.mb-4.h5 Option - #{option.name}
                                    .row
                                        form#form
                                            // input
                                            .mb-3.col-lg-6
                                                label.form-label Option Name
                                                input.form-control#name(type='text' value=option.name required)
                                                p#error.text-danger
                                            
                                            
                                            .mb-3.col-sm-6.mt-5
                                                .d-grid
                                                    button.btn.btn-primary(type='submit')
                                                        | Save Changes
    +adminScripts()
    script(src='/assets/libs/quill/dist/quill.min.js')
    script(src='/assets/js/vendors/editor.js')
    script(src='/assets/libs/dropzone/dist/min/dropzone.min.js')
    //- script(src='/assets/js/croppie.js')
    script(src='/js/adminOption.js')
    script(src="/js/adminDashboard.js")