doctype html
html(land="en")
    include common/head.pug
    include common/header.pug
    include common/navbar.pug
    include common/footer.pug
    include common/scripts.pug
    +head()
    #preloader
        #status
            .bouncing-loader
                div
                div
                div 
    #overlay
        
        #status.shadow(style="width: 200px;height: 200px; background: white;transform: translate(-50%,-50%);margin: inherit;")
            #status
                .bouncing-loader
                    div
                    div
                    div 
                h5.text-center Uploading File(s)
    body
        +header()
        +navbar()
        main
            .mt-4
                .container
                    // row
                    .row
                        // col
                        .col-12
                            // breadcrumb
                            nav(aria-label='breadcrumb')
                                ol.breadcrumb.mb-0
                                    li.breadcrumb-item
                                        a(href='/') Home

                                    li.breadcrumb-item.active(aria-current='page') Design Upload

            section.mb-lg-14.mb-8.mt-8
                .container
                    // row
                    .row
                        .col-12
                            // card
                            .card.py-1.border-0.mb-8
                                div
                                    h1.fw-bold Upload Artwork for #{product.name}
                                    p You can upload multiple documents. Maximum file size is 
                                        span.text-danger 100MB.
                                    
                                    label.btn.btn-primary(for="picture") Browse
                                    input.picture(id="picture" style="opacity:0" type='file' accept="image/x-png,image/jpeg,application/pdf,image/vnd.adobe.photoshop,application/vnd.adobe.illustrator,application/postscript")
                                    input#basketItemId(type="hidden" value=basketItem.id)                         
                                .row.mt-5
                                    each fileGroupItem in fileGroupItems 
                                        hr
                                        .col-sm-10
                                            p 
                                                span.text-success(style="font-size:20pt; margin-right: 10px") âœ“
                                                span #{fileGroupItem.fileName}
                                        .col-sm-2 
                                            p.mt-3.remove-item(style="cursor:pointer" data-filegroupitemId=fileGroupItem.id data-basketitemid=basketItem.id)
                                                span.me-1.align-text-bottom
                                                    svg.feather.feather-trash-2.text-success(xmlns='http://www.w3.org/2000/svg' width='14' height='14' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                                                        polyline(points='3 6 5 6 21 6')
                                                        path(d='M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2')
                                                        line(x1='10' y1='11' x2='10' y2='17')
                                                        line(x1='14' y1='11' x2='14' y2='17')
                                                span(style="font-size:14px") Remove

                                .d-flex.justify-content-between.mt-4
                                    a.btn.btn-primary(href="/basket") Back to Basket

        +footer()
        +scripts()
        script(src="/js/designUpload.js")
           