doctype html
html(land="en")
    include common/head.pug
    include common/header.pug
    include common/navbar.pug
    include common/footer.pug
    include common/scripts.pug
    +head()
    body
        //- +header()
        .border-bottom.shadow-sm
            nav.navbar.navbar-light.py-2
                .container.justify-content-center.justify-content-lg-between
                    a.navbar-brand(href='/' style="width:15%")
                        img.d-inline-block.align-text-top(src=companyDetails.COMPANY_LOGO alt='' style="width:100%")
                    span.navbar-text
                        | Don't have an account? 
                        a(href='/signup') Sign Up


        main
            // section
            section.my-lg-14.my-8
                // container
                .container
                    // row
                    .row.justify-content-center.align-items-center
                        .col-12.col-md-6.col-lg-4.order-lg-1.order-2
                            // img
                            img.img-fluid(src='/assets/images/svg-graphics/fp-g.svg' alt='')
                        .col-12.col-md-6.offset-lg-1.col-lg-4.order-lg-2.order-1.d-flex.align-items-center
                            div
                                
                                .mb-lg-9.mb-5
                                    // heading
                                    h1.mb-2.h2.fw-bold Forgotten Password Email has been successfully
                                    p
                                        | An email has been sent your email address, with a link to reset your password. 
                                        | Follow instructions in the email to reset your password.
                                
                                    .col-12.d-grid.gap-2
                                        a.btn.btn-outline-primary(href='/') Home
        +footer()
        +scripts()
